{
  "name": "YAP",
  "scopeName": "source.yap",
  "fileTypes": ["yap"],
  "patterns": [
    {
      "name": "comment.line.double-slash",
      "match": "//.*$"
    },
    {
      "name": "keyword.control",
      "match": "\\b(if|else|while|return|import|export|from)\\b"
    },
    {
      "name": "keyword.declaration",
      "match": "\\b(var|fn)\\b"
    },
    {
      "name": "meta.function.declaration",
      "match": "\\b(?:fn|export\\s+fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": {
          "name": "entity.name.function"
        }
      }
    },
    {
      "name": "constant.language",
      "match": "\\b(true|false)\\b"
    },
    {
      "name": "support.function",
      "match": "\\b(print|read|write|append|push|pop|random|timestamp)\\b"
    },
    {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape",
          "match": "\\\\."
        }
      ]
    },
    {
      "name": "constant.numeric",
      "match": "\\b\\d+\\b"
    },
    {
      "name": "entity.name.function.call",
      "match": "\\b(?!if\\b|else\\b|while\\b|return\\b|var\\b|fn\\b|export\\b|import\\b|from\\b)([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
    },
    {
      "name": "variable.other.readwrite",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    },
    {
      "name": "keyword.operator",
      "match": "(\\+|-|\\*|/|%|==|!=|<=|>=|<|>|&&|\\|\\||!|=)"
    },
    {
      "name": "punctuation.separator",
      "match": "(;|,|\\(|\\)|\\{|\\}|\\[|\\])"
    }
  ]
}
